{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "db-ops",
  "description": "Interface schema for database operational diagnostics and SQL analysis",
  "type": "object",
  "properties": {
    "operations": {
      "type": "object",
      "properties": {
        "list_clusters": {
          "description": "List database clusters and topology",
          "type": "object"
        },
        "inspect_processes": {
          "description": "Inspect active DB processes and contention",
          "type": "object"
        },
        "check_replication_lag": {
          "description": "Read replication lag metrics",
          "type": "object"
        },
        "execute_sql": {
          "description": "Execute a scoped SQL query",
          "type": "object",
          "properties": {
            "input": {
              "type": "object",
              "required": ["sql"],
              "properties": {
                "sql": { "type": "string" },
                "cluster": { "type": "string" },
                "limit": { "type": "integer" }
              }
            }
          }
        }
      }
    }
  }
}
