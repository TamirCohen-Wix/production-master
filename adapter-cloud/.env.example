# =============================================================================
# .env.example â€” All environment variables for production-master cloud
# =============================================================================
# Copy to .env and fill in the values for local development.

# --- Application ---------------------------------------------------------------
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug
LOG_TO_PANORAMA=false
STANDALONE_SERVER=true

# --- Database (PostgreSQL) -----------------------------------------------------
DATABASE_URL=postgresql://production_master:password@localhost:5432/production_master
# Or use individual vars (DATABASE_URL takes precedence):
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=production_master
# POSTGRES_USER=production_master
# POSTGRES_PASSWORD=password

# --- Redis ---------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
# Or use individual vars:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# --- Authentication ------------------------------------------------------------
JWT_SECRET=<your-jwt-secret>
API_KEY=<your-api-key>

# --- Anthropic (LLM) ----------------------------------------------------------
ANTHROPIC_API_KEY=<your-anthropic-api-key>

# --- MCP Servers ---------------------------------------------------------------
MCP_SERVICE_ACCOUNT_TOKEN=<your-mcp-sa-token>

# --- Object Storage (S3 / reports) --------------------------------------------
AWS_ACCESS_KEY_ID=<your-aws-access-key>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-key>
S3_REPORTS_BUCKET=production-master-reports
S3_REGION=us-east-1

# --- Observability (OpenTelemetry) ---------------------------------------------
OTEL_SERVICE_NAME=production-master
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# --- Worker --------------------------------------------------------------------
WORKER_CONCURRENCY=3

# --- Scheduled Jobs ------------------------------------------------------------
SCHEDULED_JOBS_ENABLED=true
HEALTH_CHECK_CRON=0 * * * *
STALE_TICKET_REVIEW_CRON=0 8 * * *
KNOWLEDGE_LIFECYCLE_CRON=0 3 * * *
