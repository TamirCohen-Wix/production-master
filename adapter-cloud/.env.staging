# =============================================================================
# .env.staging â€” Staging environment configuration for production-master cloud
# =============================================================================
# Copy this file or source it before running deploy-staging.sh / run-migrations.sh.
# Replace every placeholder (<...>) with actual staging values.

# --- Application ---
NODE_ENV=staging
PORT=3000
LOG_LEVEL=debug

# --- PostgreSQL ---
DB_HOST=<staging-db-host>
DB_PORT=5432
DB_NAME=production_master_staging
DB_USER=<staging-db-user>
DB_PASSWORD=<staging-db-password>
DB_SSL_MODE=require

# --- Redis ---
REDIS_HOST=<staging-redis-host>
REDIS_PORT=6379
REDIS_PASSWORD=<staging-redis-password>

# --- Container Registry ---
REGISTRY=<your-registry>/production-master

# --- Object Storage (reports) ---
S3_BUCKET=<staging-reports-bucket>
S3_REGION=<aws-region>
AWS_ACCESS_KEY_ID=<staging-aws-key>
AWS_SECRET_ACCESS_KEY=<staging-aws-secret>

# --- Anthropic ---
ANTHROPIC_API_KEY=<staging-anthropic-api-key>

# --- MCP Servers ---
MCP_SERVICE_ACCOUNT_TOKEN=<staging-mcp-sa-token>

# --- Observability ---
OTEL_EXPORTER_OTLP_ENDPOINT=<staging-otel-endpoint>
OTEL_SERVICE_NAME=production-master-staging

# --- Auth ---
JWT_SECRET=<staging-jwt-secret>
