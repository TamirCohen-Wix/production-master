{
  "__inputs": [],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "9.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "9.0.0" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "9.0.0" },
    { "type": "panel", "id": "piechart", "name": "Pie chart", "version": "9.0.0" },
    { "type": "panel", "id": "bargauge", "name": "Bar gauge", "version": "9.0.0" },
    { "type": "panel", "id": "table", "name": "Table", "version": "9.0.0" }
  ],
  "annotations": { "list": [] },
  "description": "Production Master — token usage, cost by domain, and cost trends",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [
    {
      "asDropdown": false,
      "icon": "dashboard",
      "includeVars": true,
      "keepTime": true,
      "tags": ["production-master"],
      "targetBlank": false,
      "title": "Investigation Overview",
      "type": "link",
      "url": "/d/pm-investigation-overview"
    }
  ],
  "liveNow": false,
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "title": "Token Usage",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Token consumption rate by model and type (input/output)",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 15, "stacking": { "mode": "normal" } },
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 1 },
      "id": 2,
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "expr": "sum(rate(pm_llm_tokens_total{model=~\"$model\"}[$__rate_interval])) by (model, type)",
          "legendFormat": "{{ model }} ({{ type }})",
          "refId": "A"
        }
      ],
      "title": "Token Rate by Model",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Total tokens consumed in the selected period",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          },
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "id": 3,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "none" },
      "targets": [
        {
          "expr": "sum(increase(pm_llm_tokens_total{type=\"input\"}[$__range]))",
          "legendFormat": "Input Tokens",
          "refId": "A"
        }
      ],
      "title": "Total Input Tokens (Period)",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Total output tokens consumed in the selected period",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "purple", "value": null }
            ]
          },
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "id": 4,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "none" },
      "targets": [
        {
          "expr": "sum(increase(pm_llm_tokens_total{type=\"output\"}[$__range]))",
          "legendFormat": "Output Tokens",
          "refId": "A"
        }
      ],
      "title": "Total Output Tokens (Period)",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Input/output token split across all models",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 5 },
      "id": 5,
      "options": { "legend": { "displayMode": "table", "placement": "right" }, "reduceOptions": { "calcs": ["lastNotNull"] }, "pieType": "donut" },
      "targets": [
        {
          "expr": "sum by (type) (pm_llm_tokens_total)",
          "legendFormat": "{{ type }}",
          "refId": "A"
        }
      ],
      "title": "Token Split (Input vs Output)",
      "type": "piechart"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Token distribution by model",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 5 },
      "id": 6,
      "options": { "legend": { "displayMode": "table", "placement": "right" }, "reduceOptions": { "calcs": ["lastNotNull"] }, "pieType": "donut" },
      "targets": [
        {
          "expr": "sum by (model) (pm_llm_tokens_total)",
          "legendFormat": "{{ model }}",
          "refId": "A"
        }
      ],
      "title": "Token Distribution by Model",
      "type": "piechart"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "id": 10,
      "title": "Cost by Domain",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "LLM cost rate by domain (USD per second)",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 15, "stacking": { "mode": "normal" } },
          "unit": "currencyUSD"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 },
      "id": 11,
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "expr": "sum(rate(pm_llm_cost_dollars_total{domain=~\"$domain\"}[$__rate_interval])) by (domain)",
          "legendFormat": "{{ domain }}",
          "refId": "A"
        }
      ],
      "title": "Cost Rate by Domain",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Total LLM cost by domain in the selected period",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "currencyUSD"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 10 },
      "id": 12,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "horizontal", "displayMode": "gradient" },
      "targets": [
        {
          "expr": "sum by (domain) (increase(pm_llm_cost_dollars_total[$__range]))",
          "legendFormat": "{{ domain }}",
          "refId": "A"
        }
      ],
      "title": "Total Cost by Domain (Period)",
      "type": "bargauge"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "LLM cost rate by model",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 15, "stacking": { "mode": "normal" } },
          "unit": "currencyUSD"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 18 },
      "id": 13,
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "expr": "sum(rate(pm_llm_cost_dollars_total{model=~\"$model\"}[$__rate_interval])) by (model)",
          "legendFormat": "{{ model }}",
          "refId": "A"
        }
      ],
      "title": "Cost Rate by Model",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Total LLM cost by model in the selected period",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "currencyUSD"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 18 },
      "id": 14,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "horizontal", "displayMode": "gradient" },
      "targets": [
        {
          "expr": "sum by (model) (increase(pm_llm_cost_dollars_total[$__range]))",
          "legendFormat": "{{ model }}",
          "refId": "A"
        }
      ],
      "title": "Total Cost by Model (Period)",
      "type": "bargauge"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 26 },
      "id": 20,
      "title": "Cost Trends",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Cumulative LLM cost over time",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 10 },
          "unit": "currencyUSD"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 27 },
      "id": 21,
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "expr": "sum(pm_llm_cost_dollars_total) by (domain)",
          "legendFormat": "{{ domain }}",
          "refId": "A"
        }
      ],
      "title": "Cumulative Cost by Domain",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Projected hourly LLM spend based on current rate",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          },
          "unit": "currencyUSD"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 27 },
      "id": 22,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "area" },
      "targets": [
        {
          "expr": "sum(rate(pm_llm_cost_dollars_total[5m])) * 3600",
          "legendFormat": "$/hour",
          "refId": "A"
        }
      ],
      "title": "Projected Hourly Spend",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Projected daily LLM spend based on current rate",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 250 }
            ]
          },
          "unit": "currencyUSD"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 27 },
      "id": 23,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "area" },
      "targets": [
        {
          "expr": "sum(rate(pm_llm_cost_dollars_total[5m])) * 86400",
          "legendFormat": "$/day",
          "refId": "A"
        }
      ],
      "title": "Projected Daily Spend",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Average cost per investigation (estimated from cost rate / investigation rate)",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 10 },
          "unit": "currencyUSD"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 35 },
      "id": 24,
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "expr": "sum(rate(pm_llm_cost_dollars_total[$__rate_interval])) by (domain) / sum(rate(pm_investigation_total[$__rate_interval])) by (domain)",
          "legendFormat": "{{ domain }}",
          "refId": "A"
        }
      ],
      "title": "Avg Cost per Investigation by Domain",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Average tokens per investigation (estimated from token rate / investigation rate)",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 10 },
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 35 },
      "id": 25,
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "expr": "sum(rate(pm_llm_tokens_total[$__rate_interval])) by (type) / sum(rate(pm_investigation_total[$__rate_interval]))",
          "legendFormat": "{{ type }}",
          "refId": "A"
        }
      ],
      "title": "Avg Tokens per Investigation",
      "type": "timeseries"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["production-master", "observability", "cost"],
  "templating": {
    "list": [
      {
        "current": {},
        "hide": 0,
        "includeAll": false,
        "name": "DS_PROMETHEUS",
        "query": "prometheus",
        "refresh": 1,
        "type": "datasource"
      },
      {
        "allValue": ".*",
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "definition": "label_values(pm_llm_cost_dollars_total, domain)",
        "hide": 0,
        "includeAll": true,
        "multi": true,
        "name": "domain",
        "query": "label_values(pm_llm_cost_dollars_total, domain)",
        "refresh": 2,
        "sort": 1,
        "type": "query"
      },
      {
        "allValue": ".*",
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "definition": "label_values(pm_llm_tokens_total, model)",
        "hide": 0,
        "includeAll": true,
        "multi": true,
        "name": "model",
        "query": "label_values(pm_llm_tokens_total, model)",
        "refresh": 2,
        "sort": 1,
        "type": "query"
      }
    ]
  },
  "time": { "from": "now-24h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Production Master — Cost Tracking",
  "uid": "pm-cost-tracking",
  "version": 1
}
